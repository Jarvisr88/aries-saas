<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="checkedCheckBoxTemplate">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="13" Height="13" UseLayoutRounding="True" Background="White">
            <Rectangle Stroke="#7F000000"/>
            <Path Stretch="Fill" Fill="#BF000000" Data="F1 M 47,58L 47,55L 50,58L 57,51L 57,54L 50,61L 47,58 Z " HorizontalAlignment="Center" Height="9" VerticalAlignment="Center" Width="9"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="uncheckedCheckBoxTemplate">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="13" Height="13" UseLayoutRounding="True" Background="White">
            <Rectangle Stroke="#7F000000"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="indeterminateCheckBoxTemplate">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="13" Height="13" UseLayoutRounding="True" Background="White">
            <Rectangle Stroke="#7F000000"/>
            <Rectangle VerticalAlignment="Center" HorizontalAlignment="Center" Width="6" Height="6" Fill="#BF000000"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>